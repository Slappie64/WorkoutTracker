@model IEnumerable<WorkoutTrackerApp.Models.Workout>

@{
    ViewData["Title"] = "Your Workouts";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create"a>Create a New Workout</a>
</p>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Exercises</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workout in Model)
        {
            <tr>
                <td>@workout.Date.ToShortDateString()</td>
                <td>@workout.Exercises.Count</td>
                <td>
                    <a asp-action="Details"a asp-route-id="@workout.Id"a>Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
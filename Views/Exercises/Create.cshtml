@model WorkoutTrackerApp.Models.Exercise

@{
    ViewData["Title"] = "Add Exercise";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sets"></label>
        <input asp-for="Sets" class="form-control" type="number" min="1" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reps"></label>
        <input asp-for="Reps" class="form-control" type="number" min="1" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" type="number" step="any" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="WorkoutId" />
    <div class="form-group">
        <input type="submit" value="Add Exercise" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}